<html>
<head>
  <title>RT Collection</title>
  <meta name="viewport" content="width=device-width">
</head>
<body>
<div class="navbar navbar-default">

  <!--固定メニュー-->
  <div class="navbar-header">
    
    <!--レスポンシブデザイン使用時の線 -->
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

    <!--タイトル -->
    <a class="navbar-brand">RT Collection</a>

    <!-- ログインユーザ表示
    <p class="navbar-brand"><%=image_tag(session[:user_image],:size => "25x25")%></p>
    <p class="navbar-text navbar-right"><%= session[:account_name]%></p>
    -->
    
  </div>
  
  <!-- レスポンシブデザイン使用するメニュー-->
  <div style="height: 1px;" class="navbar-collapse navbar-responsive-collapse collapse">

    <!-- ログインユーザ表示 -->
    <p class="navbar-brand"><%=image_tag(session[:user_image],:size => "25x25")%></p>
    <p class="navbar-text"><%= session[:account_name]%></p>


    <!--右側 -->
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/">Home</a></li>
      <li><a href="/sessions/destroy">Sign out</a></li>
    </ul>

  </div>
</div>



<!--メインエリア -->
<div class="container-fluid">
  <div class="row_fluid">

    <!-- サイドバー-->
    <div class="col-md-2 col-lg-2 col-sm-2" >
      <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
	<li class="active"><a href="#">RT</a></li>
	<li><a href="/contents/rtranking">RT ranking</a></li>
      </ul>
    </div>

    <!--メイン-->
    <div class="col-md-8 col-lg-8 col-sm-8" >
      <% @output.each do | status | %>
      <div class="media">
	<a class="pull-left"><%= image_tag(status["image"]) %></a>
	<div class="media-body">
	  <%= status["nickname"] %>
	  <!--- 四角で囲む -->
	  <div class="well"><%= auto_link(status["retweet"], html: { target: '_blank' }, link: :urls) %></div>
	</div>
      </div>
      <% end %>
    </div>
    
  </div>
</div>







</body>
</html>

