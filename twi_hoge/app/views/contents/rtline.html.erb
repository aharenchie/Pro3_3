<html>
<head>
  <title>RT Collection</title>
  <meta name="viewport" content="width=device-width">
</head>
<body>
<div class="navbar navbar-default">

  <!--固定メニュー-->
  <div class="navbar-header">
    
    <!--レスポンシブデザイン使用時の線 -->
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    
    <a class="navbar-brand">RT Collection</a>
    <p class="navbar-brand"><%=image_tag(session[:user_image],:size => "25x25")%></p>
    <p class="navbar-text navbar-right"><%= session[:account_name]%></p>
    
  </div>
  
  <!-- レスポンシブデザイン使用するメニュー-->
  <div style="height: 1px;" class="navbar-collapse navbar-responsive-collapse collapse">
  
    <!--右側 -->
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">RT</a></li>
      <li><a href="#">RT Ranking</a></li>
      <li><a href="/">Home</a></li>
      <li><a href="/sessions/destroy">Sign out</a></li>
    </ul>

  </div>
</div>


<% @output.each do | status | %>
<!--メインエリア -->
<div class="container-fluid">
  <!--入れ子 -->
  <div class="row_fluid">
    <div class="col-md-12 col-lg-12 col-sm-12" >
      
      <div class="media">
	
	<a class="pull-left"><%= image_tag(status["image"]) %></a>
	<div class="media-body">
	  <%= status["nickname"] %>
	  <!--- 四角で囲む -->
	  <div class="well">
	    <%= auto_link(status["retweet"], html: { target: '_blank' }, link: :urls) %>
	  </div>
	</div>
      </div>

    </div>
  </div>
</div>



<% end %>




</body>
</html>

